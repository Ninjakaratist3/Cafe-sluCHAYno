@model sluCHAYno.Models.MenuItem

    <a asp-controller="MenuItem" asp-action="Index" asp-route-id="@Model.Id">
        <div class="card">
            <div class="container p-3">
                <div class="row">
                    <div class="col-12">
                        <img src="~/img/@Model.ImageName" alt="@Model.ImageName" width="400" height="300" />
                    </div>
                    <div class="col-12">
                        @if (Model.CategoryId == 2)
                        {
                            <h3>@Model.Name чай</h3>
                        }
                        else
                        {
                            <h3>@Model.Name</h3>
                        }
                    </div>
                </div>
            </div>
        </div>
    </a>
